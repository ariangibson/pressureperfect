---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = "Professional pressure washing services in Raleigh, NC. Pressure Perfect Co offers house washing, driveway cleaning, and more.", keywords = "pressure washing, Raleigh NC, house washing, driveway cleaning, deck cleaning, roof cleaning" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Local SEO Meta Tags -->
    <meta name="geo.region" content="US-NC" />
    <meta name="geo.placename" content="Apex" />
    <meta name="geo.position" content="35.7321;-78.8503" />
    <meta name="ICBM" content="35.7321, -78.8503" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/logo.png" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/logo.png" />
    
    <title>{title}</title>
    
    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KZ60VRJ0JW"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-KZ60VRJ0JW');
    </script>
  </head>
  <body class="min-h-screen">
    <slot />
    <script>
      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    </script>
  </body>
</html>

<style>
  @import '../styles/global.css';
</style>