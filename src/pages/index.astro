  <script>
    // Mobile menu toggle functionality
    document.addEventListener('DOMContentLoaded', function() {
      const toggleButton = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      const hamburgerIcon = document.getElementById('hamburger-icon');
      const closeIcon = document.getElementById('close-icon');
      
      toggleButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
        hamburgerIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });
      
      // Close mobile menu when clicking on navigation links
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', function() {
          mobileMenu.classList.add('hidden');
          hamburgerIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
        });
      });
      
      // Close mobile menu when clicking outside
      document.addEventListener('click', function(event) {
        if (!toggleButton.contains(event.target) && !mobileMenu.contains(event.target)) {
          mobileMenu.classList.add('hidden');
          hamburgerIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
        }
      });
      
      // Make all "Get Free Quote" buttons scroll directly to the form
      const quoteButtons = document.querySelectorAll('a[href="#contact"]');
      quoteButtons.forEach(button => {
        // Skip only the Contact navigation link (not all nav/menu buttons)
        const isContactNavLink = button.textContent.trim() === 'Contact' || 
                                 button.querySelector('span')?.textContent.trim() === 'Contact';
        
        if (!isContactNavLink) {
          button.addEventListener('click', function(e) {
            e.preventDefault();
            const form = document.getElementById('quote-form');
            if (form) {
              // Add a small delay to ensure page layout is settled
              setTimeout(() => {
                form.scrollIntoView({ behavior: 'smooth', block: 'start' });
                // Focus on the first input field
                setTimeout(() => {
                  const firstInput = form.querySelector('input, textarea');
                  if (firstInput) firstInput.focus();
                }, 300);
              }, 100);
            }
          });
        }
      });
    });

    // Promotional Banner Logic
    function initPromoBanner() {
      const banner = document.getElementById('promo-banner');
      const promoText = document.getElementById('promo-text');
      const summerBadge = document.getElementById('summer-badge');
      
      if (!banner || !promoText) return;

      const now = new Date();
      const currentMonth = now.getMonth(); // 0-11 (0=Jan, 1=Feb, etc.)
      const currentYear = now.getFullYear();
      
      // Summer months: June (5), July (6), August (7)
      const isSummer = currentMonth >= 5 && currentMonth <= 7;
      
      if (!isSummer) {
        // Hide banner and badge completely if it's not summer
        banner.style.display = 'none';
        if (summerBadge) summerBadge.style.display = 'none';
        return;
      }
      
      // Show banner and badge during summer (but let CSS handle responsive hiding)
      banner.style.display = '';
      if (summerBadge) summerBadge.style.display = 'block';
      
      // Dynamic date calculation
      function getPromotionEndDate() {
        const today = new Date();
        const currentDay = today.getDate();
        const currentMonth = today.getMonth();
        const currentYear = today.getFullYear();
        
        let endDate;
        
        if (currentDay >= 30) {
          // If we're at day 30 or later, extend to 15th of next month
          const nextMonth = currentMonth + 1;
          if (nextMonth > 7) { // If beyond August, end promotion
            return null;
          }
          endDate = new Date(currentYear, nextMonth, 15);
        } else if (currentDay >= 15) {
          // If we're at day 15 or later, extend to last day of current month
          endDate = new Date(currentYear, currentMonth + 1, 0); // Last day of current month
        } else {
          // Use July 31st as default
          endDate = new Date(currentYear, 6, 31); // July 31st
        }
        
        return endDate;
      }
      
      const endDate = getPromotionEndDate();
      
      if (!endDate) {
        // Summer is over, hide banner and badge
        banner.style.display = 'none';
        if (summerBadge) summerBadge.style.display = 'none';
        return;
      }
      
      // Format the end date
      const months = ['January', 'February', 'March', 'April', 'May', 'June', 
                     'July', 'August', 'September', 'October', 'November', 'December'];
      const monthName = months[endDate.getMonth()];
      const day = endDate.getDate();
      
      // Update the banner text
      promoText.textContent = `Summer Special: $99 Townhouse Driveway Cleaning ‚Äì Ends ${monthName} ${day}!`;
    }
    
    // Initialize promo banner
    initPromoBanner();

    // Form submission handler
    const form = document.getElementById('quote-form');
    const submitBtn = document.getElementById('submit-btn');
    const submitText = document.getElementById('submit-text');
    const submitLoading = document.getElementById('submit-loading');
    const formContainer = document.getElementById('form-container');
    const thankYouContainer = document.getElementById('thank-you-container');

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Show loading state
      submitText.classList.add('hidden');
      submitLoading.classList.remove('hidden');
      submitBtn.disabled = true;
      
      // Collect form data
      const formData = new FormData(form);
      const data = {
        firstName: formData.get('firstName'),
        lastName: formData.get('lastName'),
        email: formData.get('email'),
        phone: formData.get('phone'),
        service: formData.get('service'),
        details: formData.get('details'),
        timestamp: new Date().toISOString(),
        source: 'Pressure Perfect Website'
      };
      
      try {
        const response = await fetch('https://n8n.ariangibson.com/webhook/ppform', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });
        
        if (response.ok) {
          // Success - show thank you message
          formContainer.classList.add('hidden');
          thankYouContainer.classList.remove('hidden');
        } else {
          throw new Error(`HTTP ${response.status}`);
        }
      } catch (error) {
        // Error state
        submitText.textContent = 'Error - Try Again';
        submitText.classList.remove('hidden');
        submitLoading.classList.add('hidden');
        
        // Reset button after 3 seconds
        setTimeout(() => {
          submitText.textContent = 'Get Free Quote';
          submitBtn.disabled = false;
        }, 3000);
      }
    });

    // Active navigation section tracking
    const navLinks = document.querySelectorAll('nav .lg\\:flex a[href^="#"]');
    const sections = document.querySelectorAll('section[id]');
    
    function updateActiveNavigation() {
      let current = '';
      
      sections.forEach(section => {
        const sectionTop = section.offsetTop;
        const sectionHeight = section.clientHeight;
        if (window.scrollY >= (sectionTop - 200)) {
          current = section.getAttribute('id');
        }
      });
      
      navLinks.forEach(link => {
        link.classList.remove('active-nav');
        if (link.getAttribute('href') === `#${current}`) {
          link.classList.add('active-nav');
        }
      });
    }
    
    // Update on scroll
    window.addEventListener('scroll', updateActiveNavigation);
    // Update on page load
    updateActiveNavigation();
  </script>

